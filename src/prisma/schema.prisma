type CartProductType {
  id          String
  productId   String
  userId      String
  name        String
  description String
  category    String
  brand       String
  image       String
  price       Float
  size        String
}

type ImgResponse {
  color     String
  colorCode String
  images    String[]
}

type Adress {
  city        String
  country     String
  line1       String
  line2       String?
  postal_code String
  state       String
}

enum Role {
  USER
  ADMIN
}
